<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="code_style" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dialog_code</item>
        <item name="colorPrimary">@color/dialog_code</item>
        <item name="colorPrimaryDark">@color/dialog_code</item>
        <item name="android:textColor">@color/dialog_code</item>
    </style>

    <style name="CCPPreferenceTextLarge">
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:textColor">@color/near_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CCPFontPreferenceLarge">
        <item name="android:textAppearance">@style/CCPPreferenceTextLarge</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CCPPreferenceTextSmall">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CCPFontPreferenceSmall">
        <item name="android:textAppearance">@style/CCPPreferenceTextSmall</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#a0ffffff</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="UnreadCountTipsStyle">
        <item name="android:textSize">11.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/unread_count_shape</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CCPFontPreferenceSummary" parent="@style/CCPFontPreferenceSmall">
        <item name="android:textAppearance">@style/CCPPreferenceTextSmall</item>
        <item name="android:textSize">@dimen/SmallTextSize</item>
    </style>


    <style name="Theme.Light.FullScreenDialogAct" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@drawable/btn_dialog</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>

    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>

    <style name="DialogButton.Center" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_center</item>
    </style>

    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="comon_btn_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:layout_width">@dimen/ccpbtn_width</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:background">@drawable/common_btn_bg_selector</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="comon_btn_style_white_bg">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/near_black</item>
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:layout_width">@dimen/ccpbtn_width</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:background">@drawable/common_btn_bg_white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Theme_Light_CustomDialog_Blue" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg_common_toast</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!-- 相册界面的底部文件夹推出方式 -->
    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>
