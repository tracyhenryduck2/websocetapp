<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/root">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:src="@drawable/login_logo_en" android:layout_gravity="center_horizontal" android:layout_marginTop="40dp"/>
    <com.siterwell.demo.commonview.loadingView.ZLoadingView
        android:id="@+id/loadingView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:z_color="@color/edit_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView1"/>
</RelativeLayout>