<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fold"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/BigPadding">
        <ImageView
            android:id="@+id/cellImageView"
            android:layout_width="@dimen/folder_item_image_width"
            android:layout_height="@dimen/folder_item_image_width" />

        <TextView
            android:id="@+id/cellTextView"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/NormalTextSize"
            android:textColor="@color/near_black"/>
    </LinearLayout>

</LinearLayout>
