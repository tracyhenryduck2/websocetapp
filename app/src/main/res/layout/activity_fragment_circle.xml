<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:paddingTop="@dimen/NormalPadding"
       android:paddingBottom="@dimen/NormalPadding">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="@dimen/NormalPadding"
          android:paddingRight="@dimen/NormalPadding">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/near_black"
              android:textSize="@dimen/NormalTextSize"
              android:text="@string/circle_on"
              android:layout_marginBottom="20dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <com.siterwell.demo.wheelwidget.view.WheelView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_timer"
                android:id="@+id/circle_on_hour"/>
            <com.siterwell.demo.wheelwidget.view.WheelView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_timer"
                android:id="@+id/circle_on_min"/>
         </LinearLayout>

      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="@dimen/NormalPadding"
          android:paddingRight="@dimen/NormalPadding">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/near_black"
             android:textSize="@dimen/NormalTextSize"
             android:text="@string/circle_off"
             android:layout_marginBottom="20dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <com.siterwell.demo.wheelwidget.view.WheelView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_timer"
                android:id="@+id/circle_off_hour"/>
            <com.siterwell.demo.wheelwidget.view.WheelView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_timer"
                android:id="@+id/circle_off_min"/>
         </LinearLayout>
      </LinearLayout>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:background="@color/white"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       android:padding="@dimen/NormalPadding">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/near_black"
             android:textSize="@dimen/NormalTextSize"
             android:text="@string/circle_number"
             android:layout_alignParentLeft="true"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/near_black"
             android:textSize="@dimen/NormalTextSize"
             android:text="@string/circle_no_limit"
             android:id="@+id/current_number"
             android:layout_alignParentRight="true"
             />
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical">
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/xh_hk_bg"
             android:layout_centerVertical="true"/>
         <SeekBar
             android:id="@+id/seekbar_self"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:maxHeight="10px"
             android:minHeight="10px"
             android:max="50"
             android:progress="0"
             android:progressDrawable="@color/transparent"
             android:thumb="@drawable/thumb_bar"
             android:splitTrack="false"/>
      </RelativeLayout>


   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       android:gravity="center_vertical"
       android:visibility="gone">
      <com.siterwell.demo.commonview.SettingItem
          android:id="@+id/notice"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:item_accessoryType = "switchbutton"
          app:item_showDivider="true"
          app:item_detailText=""
          app:item_titleText="@string/count_down_notice" />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp">
      <Button
          android:layout_gravity="center"
          android:id="@+id/set"
          android:text="@string/set"
          style="@style/comon_btn_style"
          android:layout_marginTop="0dp"
          android:layout_weight="1"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"/>
      <Button
          android:layout_gravity="center"
          android:id="@+id/stop"
          android:text="@string/stop"
          style="@style/comon_btn_style_white_bg"
          android:layout_marginTop="0dp"
          android:layout_weight="1"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:visibility="gone"/>
   </LinearLayout>
</LinearLayout>