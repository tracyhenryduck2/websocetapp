<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainGround"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/person_margin_top">
        <ImageView
            android:layout_width="@dimen/person_touxiang_size"
            android:layout_height="@dimen/person_touxiang_size"
            android:src="@mipmap/photograph"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/user"
            style="@style/CCPPreferenceTextLarge"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/person_margin_top">
        <com.siterwell.demo.commonview.SettingItem
            android:id="@+id/modifycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_accessoryType = "arrow"
            app:item_showDivider="true"
            app:item_detailText=""
            app:item_titleText="@string/modify_code" />
        <com.siterwell.demo.commonview.SettingItem
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_accessoryType = "arrow"
            app:item_showDivider="true"
            app:item_detailText=""
            app:item_titleText="@string/age"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>