<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainGround"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/chinese_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/NormalPadding">

        <TextView
            android:id="@+id/chinese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@null"
            android:text="@string/chinese"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/chinese_tick"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:src="@drawable/ic_common_check"
            android:visibility="invisible" />
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/mainGround" />

    <LinearLayout
        android:id="@+id/english_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/NormalPadding">

        <TextView
            android:id="@+id/english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@null"
            android:text="@string/english"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/english_tick"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:src="@drawable/ic_common_check" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/mainGround" />

    <LinearLayout
        android:id="@+id/dutch_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/NormalPadding">

        <TextView
            android:id="@+id/dutch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@null"
            android:text="@string/dutch"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/dutch_tick"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:src="@drawable/ic_common_check" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/mainGround" />

    <LinearLayout
        android:id="@+id/france_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/NormalPadding">

        <TextView
            android:id="@+id/france"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@null"
            android:text="@string/france"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/france_tick"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:src="@drawable/ic_common_check" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/mainGround" />

    <LinearLayout
        android:id="@+id/spanish_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/NormalPadding">

        <TextView
            android:id="@+id/spanish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@null"
            android:text="@string/spanish"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/spanish_tick"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:src="@drawable/ic_common_check"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
